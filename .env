# ========== CONFIGURAÇÕES GERAIS ==========
COMPOSE_PROJECT_NAME=api-fest
VERSION=1.0.0
BUILD_DATE=2025-11-26T00:00:00Z
VCS_REF=roteiro10

# ========== PERFIS DE EXECUÇÃO ==========
SPRING_PROFILES_ACTIVE=prod

# ========== CONFIGURAÇÕES DA APLICAÇÃO ==========
APP_PORT=8080
ACTUATOR_PORT=8081

# ========== CONFIGURAÇÕES DO BANCO POSTGRESQL ==========
POSTGRES_DB=api_fest_db
POSTGRES_USER=api_fest_user
POSTGRES_PASSWORD=api_fest_strong_password_2025
POSTGRES_PORT=5432
DDL_AUTO=update
SHOW_SQL=false

# ========== CONFIGURAÇÕES DO REDIS ==========
REDIS_PASSWORD=redis_strong_password_2025
REDIS_PORT=6379

# ========== CONFIGURAÇÕES DE SEGURANÇA ==========
JWT_SECRET=api-fest-super-secret-jwt-key-256-bits-roteiro-10-delivery-tech-2025-secure
JWT_EXPIRATION=86400000

# ========== CONFIGURAÇÕES DE LOGGING ==========
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG

# ========== CONFIGURAÇÕES NGINX (OPCIONAL) ==========
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# ========== CONFIGURAÇÕES PROMETHEUS (OPCIONAL) ==========
PROMETHEUS_PORT=9090

# ========== CONFIGURAÇÕES GRAFANA (OPCIONAL) ==========
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# ===============================================================================
# INSTRUÇÕES DE USO
# ===============================================================================
# 
# 1. Copie este arquivo para .env na raiz do projeto:
#    cp .env.example .env
# 
# 2. Ajuste as senhas e configurações conforme necessário
# 
# 3. Execute o Docker Compose:
#    docker-compose -f docker-compose-roteiro10.yml up -d
# 
# ===============================================================================