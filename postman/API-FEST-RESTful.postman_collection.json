				{
					"name": "Criar Restaurante",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code === 201) {",
									"    const responseJson = pm.response.json();",
									"    pm.collectionVariables.set('restaurante_id', responseJson.id);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nome\": \"Pizzaria do Mario\",\n    \"endereco\": \"Av. Principal, 456\",\n    \"telefone\": \"(11) 3333-4444\",\n    \"horarioFuncionamento\": \"18:00-23:00\",\n    \"categoria\": \"PIZZARIA\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/restaurantes",
							"host": ["{{baseUrl}}"],
							"path": ["api", "restaurantes"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "04 - Rate Limiting Test",
			"item": [
				{
					"name": "Teste Rate Limit - Múltiplas Requisições",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/clientes",
							"host": ["{{baseUrl}}"],
							"path": ["api", "clientes"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "05 - Health Check",
			"item": [
